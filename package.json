{
  "name": "safetrade",
  "version": "1.0.0",
  "description": "Safetrade",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -- turbo run dev",
    "start:server": "dotenv -- npm run start --workspace=server",
    "db:migrate": "dotenv -- npm run db:migrate --workspace=packages/db-schema",
    "db:generate": "dotenv -- npm run db:generate --workspace=packages/db-schema",
    "build": "turbo run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabirkhanek/safetrade.git"
  },
  "keywords": [
    "NestJS",
    "react",
    "nextjs",
    "javascript",
    "marketplace",
    "p2p"
  ],
  "author": "devsabir",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sabirkhanek/safetrade/issues"
  },
  "homepage": "https://github.com/sabirkhanek/safetrade#readme",
  "devDependencies": {
    "drizzle-kit": "^0.20.14",
    "tsx": "^4.7.1",
    "turbo": "^1.13.0"
  },
  "dependencies": {
    "@gsap/react": "^2.1.1",
    "@nestjs/serve-static": "^4.0.2",
    "@reduxjs/toolkit": "^2.2.3",
    "@tanstack/react-query": "^4.32.6",
    "@tanstack/react-query-devtools": "^4.32.6",
    "@ts-rest/core": "^3.41.0",
    "@ts-rest/react-query": "^3.45.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cli-color": "^2.0.6",
    "@types/lodash": "^4.17.0",
    "@types/pg": "^8.11.4",
    "cli-color": "^2.0.4",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "drizzle-orm": "^0.30.6",
    "framer-motion": "^11.1.9",
    "gsap": "^3.12.5",
    "hamburger-react": "^2.5.0",
    "lodash": "^4.17.21",
    "pg": "^8.11.4",
    "react-icons": "^5.2.1",
    "react-redux": "^9.1.2",
    "redux": "^5.0.1"
  }
}
