{
  "$schema": "https://turborepo.org/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"], "cache": true },
    "dev": {
      "persistent": true,
      "cache": false,
      "passThroughEnv": [
        "DB_STRING",
        "PGHOST",
        "PGDATABASE",
        "PGUSER",
        "PGPASSWORD"
      ]
    }
  }
}
